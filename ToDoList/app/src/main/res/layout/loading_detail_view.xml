<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/imgPlaceHolder"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/namePlaceHolder"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginTop="24dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/imgPlaceHolder"
        app:layout_constraintStart_toStartOf="@+id/imgPlaceHolder"
        app:layout_constraintTop_toBottomOf="@+id/imgPlaceHolder" />

    <View
        android:id="@+id/tilePlaceHolder"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/namePlaceHolder"
        app:layout_constraintStart_toStartOf="@+id/namePlaceHolder"
        app:layout_constraintTop_toBottomOf="@+id/namePlaceHolder" />

    <View
        android:id="@+id/tahunPlaceholder"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/tilePlaceHolder"
        app:layout_constraintStart_toStartOf="@+id/tilePlaceHolder"
        app:layout_constraintTop_toBottomOf="@+id/tilePlaceHolder" />

    <View
        android:id="@+id/kategoriPlaceholder"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/tahunPlaceholder"
        app:layout_constraintStart_toStartOf="@+id/tahunPlaceholder"
        app:layout_constraintTop_toBottomOf="@+id/tahunPlaceholder" />


</androidx.constraintlayout.widget.ConstraintLayout>